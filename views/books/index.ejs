<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/home.css" />
    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      .content {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 40px;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
      }
      .table th,
      .table td {
        padding: 10px;
        border: 1px solid #ddd;
      }
      .table th {
        background-color: #f2f2f2;
        font-weight: bold;
        text-align: left;
      }
      .btn-action {
        margin-right: 5px;
      }
      .error-message {
        color: red;
        font-weight: bold;
        margin-top: 20px;
      }
      .action-col {
        width: 180px;
      }
    </style>
    <title>Favourite Book List</title>
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="content">
      <h1 class="mb-4">Favourite Book List</h1>
      <% if (books.length === 0) { %>
      <p class="error-message">
        No books found. Please add some books.
      </p>
      <% } else { %>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th class="action-col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach((book) => { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td>
              <a
                href="/<%= book._id %>"
                class="btn btn-primary btn-action"
                >Edit</a
              >
              <a
                href="/delete/<%= book._id %>"
                class="btn btn-danger btn-action"
                >Delete</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } %>
      <a href="/add" class="btn btn-success">Add Book</a>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
